# NetworkMapper Docker Environment Variables
# Copy this file to .env and customize as needed

# Network Configuration
# Leave empty for auto-detection
INTERFACE=

# Timezone (for accurate timestamps)
TZ=America/New_York

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOGLEVEL=INFO

# Scanner preferences
# Prefer masscan for large networks (true/false)
PREFER_MASSCAN=false

# Default scan type (discovery, fast, deeper)
DEFAULT_SCAN_TYPE=discovery

# SNMP Configuration (optional)
# SNMP_COMMUNITY=public
# SNMP_VERSION=v2c

# Disable specific features
# DISABLE_VULNERABILITY_SCAN=false
# DISABLE_SNMP=false

# Performance tuning
# MAX_PARALLEL_SCANS=5
# SCAN_TIMEOUT=300

# Export formats (comma-separated)
# EXPORT_FORMATS=json,csv,html,pdf